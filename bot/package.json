{
  "name": "tg-whisper-bot",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:nodemon": "nodemon --watch src --ext ts --exec tsx src/index.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "grammy": "^1.20.0",
    "@grammyjs/auto-retry": "^2.0.2",
    "@grammyjs/ratelimiter": "^1.2.0",
    "dotenv": "^16.3.1",
    "axios": "^1.6.0",
    "form-data": "^4.0.0",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/form-data": "^2.5.0",
    "tsx": "^4.7.0",
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "prettier": "^3.2.4"
  }
}
